{
  "name": "hefesto",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint --parallel",
    "format": "turbo run prettier --parallel || true",
    "typecheck": "turbo run typecheck --parallel",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.1.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "pnpm -C apps/web exec eslint --fix"
    ],
    "apps/api/**/*.{ts,tsx,js,jsx}": [
      "pnpm -C apps/api exec eslint --fix"
    ],
    "*.{md,mdx,json,yml,yaml,css,scss,html}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.7.3",
      "prettier": "^3.6.2"
    }
  }
}
