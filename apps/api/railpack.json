{
  "provider": "railway",
  "$schema": "https://schema.railpack.com",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        "corepack enable",
        "corepack prepare pnpm@10.20.0 --activate",
        "pnpm install -r --frozen-lockfile"
      ]
    },
    "build": {
      "inputs": [
        {
          "step": "install"
        }
      ],
      "commands": ["pnpm --filter ${SERVICE_FILTER:-@hefesto/api} build"]
    }
  },
  "deploy": {
    "startCommand": "pnpm --filter ${SERVICE_FILTER:-@hefesto/api} start:prod"
  }
}
